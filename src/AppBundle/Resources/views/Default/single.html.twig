                            {% for i in 1..images|length-1 %}
                                <li data-target="#carouselFull" data-slide-to={{ i+1 }}></li>
                            {% endfor %}
                        {% else %}
                            <li data-target="#carouselFull" data-slide-to="0" class="active"></li>
                        {% endif %}
                    </ol>
                    <div class="carousel-inner">
                        {% if images|length >1 %}
                            <div class="item active ">
                                <img src="../{{ images[0]["meta_value"] }}">
                                <div class="container">
                                    <div class="carousel-caption">
                                    </div>
                                </div>
                            </div>
                            {% for i in 1..images|length-1 %}
                                <div class="item ">
                                    <img src="../{{ images[i]["meta_value"] }}">
                                    <div class="container">
                                        <div class="carousel-caption">
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
